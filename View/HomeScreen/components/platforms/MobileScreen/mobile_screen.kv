<HomeMobileScreenView>
    id: home_mobile
    name: 'home_mobile'
    md_bg_color: app.theme_cls.primary_color
    gpa: root.parent
    MDBottomNavigation:
        id: botton_nav
        use_text: False
        MDBottomNavigationItem:
            md_bg_color: app.theme_cls.primary_color
            # md_bg_color: app.theme_cls.bg_normal
            name: "first home screen"
            #text: "Home"
            icon: 'home-outline'
##
            MDScrollViewRefreshLayout:
                id: home_refresh_layout
                root_layout: root.parent
                refresh_callback: print(root.parent)
                adaptive_height: True
#                velocity: -0.5
                scroll_distance: dp(1)
                scroll_timeout: 55
                do_scroll_x: False
                do_scroll_y: True
#
                MDGridLayout:
                    size_hint_y: None
                    height: self.minimum_height
                    cols:1
                    md_bg_color: app.theme_cls.bg_light
                    MDBoxLayout:
                        adaptive_height: True
                        padding: [dp(18),dp(8),dp(8),dp(0)]
                        md_bg_color: app.theme_cls.primary_color
                        Label:
                            adaptive_size: True
                            text: "Emir Embroidery"
                            color: get_color_from_hex(colors['Red']['800'])
                            font_style: 'H1'
                            font_size: '26sp'
                            bold: True
                            halign: 'right'
                            pos_hint: {'center_x':-0.5,'center_y': 0.5}
                        Widget:
                        MDIconButton:
                            icon: "account-circle-outline"
                            on_release: print(root.parent.model.data)
                            on_release: app.add_screen('login screen')
                        BadgeBtnIcon:
                            id: badge_icon
                            icon: "cart-outline"
                            badge_icon: f'numeric-{len(app.cart_items)}'
                            pos_hint: {'center_x': .4,'center_y': 0.5}
                            on_release: app.add_screen('cart screen')

#                            on_press:
#                                if app.is_authenticated():\
#                                app.onNextScreen(root.name, 'cart screen')
#                                else:\
#                                root.show_alert_dialog("Login to view Cart")
#                                print('Please Login')
                    MDBoxLayout:
                        adaptive_height: True
                        padding: [dp(20),dp(5),dp(23),dp(20)]
                        size_hint_x: .9
                        pos_hint_y: .8
                        radius: [0,0,dp(23),dp(23)]
                        orientation: 'vertical'
                        md_bg_color: app.theme_cls.primary_color
                        GenTextField:
                            id: search_field
                            mode: "round"
                            icon_left: "magnify"
                            hint_text: "Search Products Categories"
                            multiline: False
                            font_size: '18sp'
                            coursor_width: '1.5sp'
                            on_focus: True
                            background_color: app.theme_cls.bg_normal
                            # background_color: get_color_from_hex('#ffd747')
#                             foreground_color: get_color_from_hex('#ffd747')
                    MDBoxLayout:
                        id: categories_box
                        padding: [10,0,0,0]
                        adaptive_height: True
                        MDBoxLayout:
                            adaptive_height: True
                            height: root.height/9
#                            size_hint_y: None
                            ScrollView:
                                do_scroll_y: False
                                effect_cls: StiffScrollEffect
                                bar_width: 0
                                MDBoxLayout:
                                    id: categories_layout
                                    orientation: 'horizontal'
                                    adaptive_width: True
                                    spacing: dp(10)
                                    padding: [dp(15),0,0,dp(15)]
                                    BtnIcon:
                                        title: 'Categories'
                                        pos_hint: {'center_x': .5, 'center_y': .5}
                                        on_press: print(root.parent.name)
                                    ImageBtn:
                                        source: 'assets/images/img/WA00031.jpg'
                                        title: 'English Wear'
                                        pos_hint: {'center_x': .5, 'center_y': .5}
                                    ImageBtn:
                                        source: 'assets/images/img/WA00032.jpg'
                                        title: 'Native'
                                        pos_hint: {'center_x': .5, 'center_y': .5}

                                    # ImageBtn:
                                    #     source: 'assets/images/boy.png'
                                    #     title: 'Eggs'
                                    #     pos_hint: {'center_x': .5, 'center_y': .5}

                    MDBoxLayout:
                        id: ads_box
                        # size_hint_y: None
                        # height: root.height/4
                        # padding: dp(10)

                    MDBoxLayout:
                        id: items_box
                        adaptive_height: True
                        size_hint_y: None
                        height: root.height+dp(40)
                        MDRecycleView:
                            id: home_tile
                            viewclass: 'Tile'
                            effect_cls: 'ScrollEffect'
                            scroll_distance: dp(1)
                            do_scroll_x: False

                            RecycleGridLayout:
                                spacing: dp(15)
                                padding: [dp(13),dp(10),dp(10),dp(10)]
                                size_hint_y: None
                                default_size: None, None
                                default_size_hint: .1, None
                                height: self.minimum_height
                                cols: 2
                                md_bg_color: app.theme_cls.primary_light


        MDBottomNavigationItem:
            name: 'Feed screen'
            icon: "text-box"
            text: 'Feed'

            Image:
                source: "assets/images/indev1.png"
                allow_stretch:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                size_hint: .5, .5

            MDLabel:
                text: 'Coming soon'
                halign:'center'
                pos_hint: {'center_x': 0.5,'center_y': 0.35}
#                # ScrollView:Â¬

        MDBottomNavigationItem:
            name: 'favourites screen'
            icon: 'heart-outline'
            text: 'Wishlist'

            Image:
                source: "assets/images/indev1.png"
                allow_stretch:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                size_hint: .5, .5

            MDLabel:
                text: 'Coming soon'
                halign:'center'
                pos_hint: {'center_x': 0.5,'center_y': 0.35}


        MDBottomNavigationItem:
            name: 'profile screen'
            icon: 'account-outline'
            text: 'Profile'

            MDBoxLayout:
                orientation: 'vertical'
                FitImage:
                    opacity: 0.8
                    size_hint_y: .4
                    source: 'assets/images/img1.jpg'
                ScrollView:
                    size_hint_y: .6
                    MDList:
                        AccountItem:
                            text: 'My Account'
                            on_release:
                                app.add_screen("profile screen")
#                                if app.is_authenticated():\
#                                app.onNextScreen(root.name, 'my account screen')
#                                else:\
#                                root.show_alert_dialog("Please Login edit account")
#                                print('Please Login')
                            IconLeftWidget:
                                icon: 'account'
                        AccountItem:
                            text: 'Orders'
                            on_release:
                                app.add_screen("orders screen")

#                                if app.is_authenticated():\
#                                app.onNextScreen(root.name, 'order history screen')
#                                else:\
#                                root.show_alert_dialog("Please Login view orders")
#                                print('Please Login')
                            IconLeftWidget:
                                icon: 'cart'
                        AccountItem:
                            text: 'Addresses'
                            on_release:
                                app.add_screen("address screen")
#                                app.onNextScreen(root.name, 'addresses screen')
                            IconLeftWidget:
                                icon: 'map-marker'
                        AccountItem:
                            text: 'Feed'
                            on_release:
#                                app.add_screen("login screen")

#                                app.onNextScreen(root.name, 'feed screen')
                            IconLeftWidget:
                                icon: 'phone'
                        AccountItem:
                            text: 'Logout'
                            on_release: pass
                            IconLeftWidget:
                                icon: 'account-lock'
            ImageBtn:
                source: 'assets/images/img/WA00038.jpg'
                size: dp(120),dp(120)
                pos_hint: {'center_x': 0.5,'center_y': 0.9}
                on_press:
                    app.add_screen("login screen")
#                    app.onNextScreen(root.name, 'login screen')


            TwoLineIconListItem:
                id: user_detail
                text: 'Sign in'
                secondary_text: '*********'
                pos_hint: {'center_x': 0.65,'center_y': 0.77}
                divider: None
                _ripple: False


