<DetailScreenView>
    id: clean_root
    md_bg_color: app.theme_cls.bg_normal
    on_enter:
        title.text = app.details_page_data['name']
        carousel_slide.data = []
        carousel_slide.data = [app.details_page_data['source']]
        price.text = app.details_page_data['price']    
    MDBoxLayout:
        orientation: 'vertical'
        MDRelativeLayout:
            id: carousel
            size_hint_y: .42
            CarouselSlide:
                id: carousel_slide
                radius: [0,0,15,15]
                data: []
            # source1: 'assets/images/cate-12.jpg'
            
        ScrollView:
            size_hint_y: .58
            MDList:
                padding: 18
                spacing: 24
                MDBoxLayout:
                    adaptive_height: True
                    spacing: 12
                    padding: 0,0,0,12
                    # ImageBtn:
                    # MDBoxLayout:
                    #     orientation: 'vertical'
                    #     adaptive_height: True
                    #     ChipLabel:
                    #         id: vendor
                    #         adaptive_height: True
                    #         text: 'Div Farm'
                    #         font_style: 'Body1'
                    #     ChipLabel: 
                    #         adaptive_height: True
                    #         text: 'Vendor'
                    #         font_style: 'Caption'
                    ChipLabel:
                        id: price
                        # text: 
                        halign: 'right'
                ChipLabel:
                    id: title
                    # text: 
                    font_style: 'H6'
                    bold: True
                Widget: 
                    size_hint_y: None
                    height: dp(12)
               
                ChipLabel: 
                    text: 'Description'
                    font_style: 'Body1'
                MDSeparator:
                    adaptive_width: True
                    width: dp(215)
                ChipLabel:
                    id: description
                    text: ''
                    font_style: 'Body2'
                Widget: 
                    size_hint_y: None
                    height: dp(12)
                ChipLabel:
                    text: 'MORE DETAIL'
                    font_style: 'H6'
                MDSeparator:
                ChipLabel:
                    text: 'Categories'
                MDBoxLayout:
                    adaptive_size: True
                    padding: dp(8)
                    spacing: dp(8)
                    MDChip:
                        text: 'Caps'
                        md_bg_color: app.theme_cls.primary_light
                        _no_ripple_effect: True
                    MDChip:
                        text: 'Wears'
                        md_bg_color: app.theme_cls.primary_light
                        _no_ripple_effect: True
                # ExpansionPanel:
                #     panel_cls: MDExpansionPanelOneLine(text='Review')

        # MDBoxLayout:
        MDRelativeLayout:
            adaptive_height: True
            size_hint_y: None
            height: dp(80)
            # spacing: dp(15)
            padding: dp(10)
            # pos_hint: {'center_y': 0.2}
            MDBoxLayout:
                size_hint_y: None
                padding: [dp(25),dp(10)]
                id: add_to_cart_btn_box
                pos_hint: {'center_x': 0.5}
                MDFillRoundFlatButton:
                    text: 'Add To Cart'
                    adaptive_size: True
                    rounded_button: False
                    size_hint: .8, None
                    size_hint_y: .8
                    height: dp(160)
                    font_style: 'Button'     
                    on_press: app.add_item_to_cart({'name':title.text,'price': str(price.text),'price_tag': str(price.text),'quantity': '1','unit': 'each','source': app.details_page_data['source']})
            QtyBox:
                id: qty_box
                size_hint: .8, .8
                pos_hint: {'center_x': 1.5,}

    MDIconButton:
        icon: 'arrow-left'
        y: root.height-(self.height+dp(12))
        x: 6
        md_bg_color: app.theme_cls.bg_light
        on_release: app.go_to_recent_screen()

                    
<ChipLabel@MDLabel>
    theme_text_color: 'Custom'
    color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]



    