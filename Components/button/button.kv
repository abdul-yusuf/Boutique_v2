#:import Animation kivy.animation.Animation

<ImageBtn>:
    size_hint: None, None
    size: dp(55), dp(55)
    radius: sp(self.width/2)
    md_bg_color: app.theme_cls.primary_light

    FitImage:
        size: root.size[0]-3, root.size[1]-3
        size_hint: None, None
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        radius: dp(30)
        source: root.source
        pos_hint: {'center_x': .5, 'center_y': .5}
    MDBoxLayout:
        pos_hint: {'center_x':.5, 'center_y': -.15}
        adaptive_width: True
        MDLabel:
            text: root.title
            theme_text_color: 'Primary'
            halign: 'center'
            font_style: 'Caption'


<BtnIcon>:
    size_hint: None, None
    size: dp(55), dp(55)
    radius: sp(self.width/2)
    md_bg_color: app.theme_cls.primary_light

    MDIcon:
        icon: root.icon
        theme_text_color: 'Custom'
        pos_hint: {'center_x': 0.5, 'center_y': .5}
        color: app.theme_cls.bg_normal

    MDBoxLayout:
        pos_hint: {'center_x':.5, 'center_y': -.15}
        adaptive_width: True
        MDLabel:
            text: root.title
            theme_text_color: 'Primary'
            halign: 'center'
            font_style: 'Caption'

<BadgeBtnIcon>:
    size_hint: None, None
    size: dp(35), dp(35)
    radius: sp(self.width/2)

    MDIcon:
        icon: root.icon
        badge_icon: root.badge_icon
        pos_hint: {'center_x':.5,'center_y':.5}




<Tile>:
    size_hint_y: None
    height: dp(260)
    orientation: 'vertical'
    radius: dp(12)
    padding: [1,0]
    md_bg_color: app.theme_cls.bg_dark

    RelativeLayout:
        FitImage:
            source: root.image
            radius: [dp(10),dp(10),dp(15),dp(15)]

        MDIconButton:
            id: like_btn
#            icon: "heart-outline" if not root._is_liked else 'heart'
            icon: "heart-outline"
            pos_hint: {'center_x': 0.82,'center_y': 0.86}
            theme_text_color: "Error"
            md_bg_color: get_color_from_hex(colors['Gray']['50'])
            on_release:
                self.icon = 'heart' if self.icon == 'heart-outline' else 'heart-outline'
                root.store_btn_state(root.parent.parent)

        MDIconButton:
            icon: "cart-plus"
            pos_hint: {'center_x': 0.82,'center_y': 0.1}
            md_bg_color: app.theme_cls.bg_normal
            theme_text_color: 'Custom'
            color: app.theme_cls.bg_dark
            on_press: root.add_2_cart_btn()

        MDBoxLayout:
            id: percentage_badge
            size_hint_x: .3
            pos_hint: {'center_x': 0.1}
           # Badge:
            #    value: '30'

    RelativeLayout:
        padding: dp(15)
        size_hint_y: None
        height: self.parent.height/3.8
        MDLabel:
            text: root.name
            font_style: 'H6'
            shorten: True
            shorten_from: 'right'
            pos_hint: {'center_x': 0.53,'center_y': 0.83}
#            theme_text_color: 'Custom'
#            color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]
        MDBoxLayout:
            #spacing: dp(8)
            padding: [dp(6),0,0,0]
            MDLabel:
                #text_size: len(self.text), self.size[1]
                adaptive_width: True
                width: dp(len(self.text)*11)
                id: price_label
                text: "₦{}".format(root.price)
                font_style: 'Body1'
                #strikethrough: True
                # color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]
    #            theme_text_color: "Primary" if root.discount_price=='null' else 'Error'
                # theme_text_color: 'Custom'
#                pos_hint: {'center_x': 0.54,'center_y': 0.5}
            MDLabel:
                id: sale_price_label
                text: "₦{}".format(root.sale_price) if root.sale_price != '' else ''
                font_style: 'Body1'
                #strikethrough: True
                # color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]
    #            theme_text_color: "Primary" if root.discount_price=='null' else 'Error'
                theme_text_color: 'Error'
 #               pos_hint: {'center_x': 0.54,'center_y': 0.5}

        MDRelativeLayout:
            size_hint: None, None
            #adaptive_size: True
            height: dp(20)
            width: self.parent.size[0]/2
            pos_hint: {'center_x': 0.82,'center_y': 0.25}
            MDLabel:
                adaptive_size: True
                text: "Rating :"
                font_style: "Overline"
#                halign: 'left'
                pos_hint: {'center_y': 0.5}
                theme_text_color: 'Custom'
                color: app.theme_cls.text_color

            MDLabel:
                id: rate
                adaptive_size: True
                text: root.rating
                font_style: "Overline"
                halign: 'right'
                pos_hint: {'center_x': 0.55,'center_y': 0.5}
                theme_text_color: 'Custom'
                color: [1, 1, 1, 1] if app.theme_cls.theme_style=='Dark' else [0,0,0,1]

            MDIconButton:
#                size_hint: None, None
#                size: 1,.1
                adaptive_size: True
                icon: 'star'
                icon_size: '12sp'
                pos_hint: {'right': 1,'center_y': 0.5}
                theme_text_color: 'Custom'
                #halign: 'right'
                icon_color: get_color_from_hex('#ffd747')


